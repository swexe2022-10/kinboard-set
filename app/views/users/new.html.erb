<% if @user.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @user , url: {action: :create} do |f| %>
    <%= f.label :uid, 'id' %>
    <%= f.text_area :uid %>
    <%= f.label :pass, 'パスワード' %>
    <%= f.text_area :pass%>
    <%= f.label :name, 'ニックネーム' %>
    <%= f.text_area :name%>
    <%= f.submit '追加' %>
<%end%>